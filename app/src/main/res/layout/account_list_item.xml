<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="1dp"
    android:focusable="false"
    android:clickable="false"
    android:orientation="horizontal">
    <LinearLayout
        android:background="@drawable/item_press_selecter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:gravity="center_vertical"
        android:id="@+id/item_main"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/now_login"
            android:layout_marginHorizontal="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/now" />

        <com.example.youngtogether.layout.CircleImageView
        android:id="@+id/account_head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:focusable="false"
        android:src="@drawable/account">

    </com.example.youngtogether.layout.CircleImageView>

        <TextView
            android:id="@+id/account_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_20"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:focusable="false"
            android:text="用户名" />

        <ImageView
            android:id="@+id/account_delete_img"
            android:focusable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/delete_img_selecter" />
    </LinearLayout>
</LinearLayout>